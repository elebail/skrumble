<!-- form for trip creation -->
<div>
 <%= simple_form_for [@trip] do |f| %>
   <%= f.association :country, placeholder: "Destination" %>
   <%= f.input :start_date, placeholder: "Destination" %>
   <%= f.input :end_date, placeholder: "Destination" %>
   <%= f.button :submit %>
   <% end %>
</div>
