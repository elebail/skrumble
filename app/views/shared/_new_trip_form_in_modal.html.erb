<%= simple_form_for [@trip], html: {class: "new-trip-form"} do |f| %>
<div class="d-flex row justify-content-center">
  <div class="d-flex justify-content-center">
    <%= f.input :start_date, label: false, placeholder: "Departure date", as: :string, required: false, input_html: {class: "datepicker2"} %>
    <%= f.input :end_date, label: false, placeholder: "Return date", as: :string, required: false, input_html: {id: "end_date2", class: "datepicker2"} %>
  </div>
    <%= f.association :country, label: false, input_html: {class: "select2"} %>
    <div class="d-flex row justify-content-center">
    <%= f.button :submit, "Let's go!", class: "btn bout2" %>
</div>
  <% end %>
</div>
