function refreshForm(innerHTML) {
  const formContainer = document.querySelector('#share-trip-form-container');
  formContainer.innerHTML = innerHTML;
}

<% if @new_trip.errors.any? %>
  refreshForm('<%= j render 'shared/share_form', trip: @new_trip %>')
<% else %>
  crosss = document.querySelector(".close");
  crosss.click();
  swal("Good job!", "Your trip has been shared!", "success");
<% end %>
